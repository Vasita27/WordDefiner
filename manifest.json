{
  "manifest_version": 3,
  "name": "Word Definition Finder",
  "version": "1.0",
  "description": "Find the definition of selected words",
  "permissions": ["activeTab"],
  "icons": {
    "16": "icons/icon500.png",
    "48": "icons/icon500.png",
    "128": "icons/icon500.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
    
  }
}
